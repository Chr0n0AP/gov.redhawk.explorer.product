<?xml version="1.0" encoding="UTF-8"?>
<project name="testSuite" default="suite" basedir=".">
    <property name="eclipse-home" value="${basedir}/../.."/>
    <property name="plugin" value="gov.redhawk.product.sca_explorer.tests"/>
    <property name="testLibrary" value="${eclipse-home}/plugins/org.eclipse.test_3.3.0/library.xml" />

    <target name="init">
      <tstamp/>
      <delete>
        <fileset dir="${eclipse-home}" includes="gov*.xml"/>
      </delete>
    </target>

    <target name="suite">
      <property name="data.dir" value="${eclipse-home}/${plugin}"/>
      <delete dir="${data.dir}"/>
      <ant target="core-test" antfile="${testLibrary}">
        <property name="data-dir" value="${data.dir}"/>
        <property name="plugin-name" value="${plugin}"/>
        <property name="classname" value="${plugin}.AllProductScaExplorerTests"/>
      </ant>
    </target>
  
    <target name="run" depends="init,suite">
      <ant target="collect" antfile="${testLibrary}" dir="${eclipse-home}">
        <property name="includes" value="gov*.xml"/>
        <property name="output-file" value="test-results/${plugin}.xml"/>
      </ant>
    </target>

</project>

